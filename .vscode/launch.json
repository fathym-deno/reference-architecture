  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Test Program",
      "type": "node",
      "program": "${workspaceFolder}/tests/tests.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno.exe",
      "runtimeArgs": [
        "test",
        "-A",
        "--config",
        "./deno.jsonc",
        "--inspect-wait"
      ],
      "attachSimplePort": 9229
    },
    {
      "name": "Debug test-runtime CLI",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
