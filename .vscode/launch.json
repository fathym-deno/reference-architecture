        "run",
        "--inspect-brk",
        "-A",
        "${workspaceFolder}/src/common/cli/cli-runtime.ts",
        "${workspaceFolder}/tests/common/cli/test-cli/.cli.json",
        "hello"
      ],
      "console": "integratedTerminal",
      "attachSimplePort": 9229
    },
