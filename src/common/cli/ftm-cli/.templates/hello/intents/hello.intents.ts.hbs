import { CommandIntents } from '@fathym/common/cli';
import HelloCommand from '../commands/hello.ts';
import initFn from '../.cli.init.ts';

const cmd = HelloCommand.Build();
const origin = import.meta.url;

CommandIntents('Hello Command Suite', cmd, origin)
  .WithInit(initFn)
  .Intent('Greet default world', (int) =>
    int
      .Args([undefined])
      .Flags({})
      .ExpectLogs('ðŸ‘‹ Hello, world')
      .ExpectExit(0),
  )
  .Intent('Greet a specific name', (int) =>
    int
      .Args(['me'])
      .Flags({})
      .ExpectLogs('ðŸ‘‹ Hello, me')
      .ExpectExit(0),
  )
  .Intent('Greet loudly', (int) =>
    int
      .Args(['team'])
      .Flags({ loud: true })
      .ExpectLogs('ðŸ‘‹ HELLO, TEAM')
      .ExpectExit(0),
  )
  .Intent('Dry run greeting', (int) =>
    int
      .Args(['sandbox'])
      .Flags({ 'dry-run': true })
      .ExpectLogs('ðŸ›‘ Dry run: "Hello, sandbox" would have been printed.')
      .ExpectExit(0),
  )
  .Intent('Dry run loud greeting', (int) =>
    int
      .Args(['everyone'])
      .Flags({ 'dry-run': true, loud: true })
      .ExpectLogs('ðŸ›‘ Dry run: "HELLO, EVERYONE" would have been printed.')
      .ExpectExit(0),
  )
  .Run();
